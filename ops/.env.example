# Environment variables for ForgeChat deployment
# Copy this file to .env and update with your values

# Server Configuration
PORT=3000
NODE_ENV=production

# BabbleBeaver API Configuration (Required)
BABBLEBEAVER_API_URL=https://api.buildlycore.com
BABBLEBEAVER_ORG_UUID=your-org-uuid-here
BABBLEBEAVER_PRODUCT_UUID=your-product-uuid-here
BABBLEBEAVER_AUTH_TOKEN=your-auth-token-here

# Chat Widget Configuration
CHAT_TITLE=ForgeChat Assistant
CHAT_THEME=light
CHAT_POSITION=bottom-right
CHAT_PRIMARY_COLOR=#1976d2
CHAT_AUTO_OPEN=false
CHAT_ENABLE_PUNCHLIST=true
CHAT_ENABLE_FILE_UPLOAD=false
CHAT_MAX_MESSAGES=100

# Optional: Buildly Labs Integration
LABS_PROJECT_UUID=
LABS_INTEGRATION_ENABLED=false

# Optional: Analytics and Monitoring
ANALYTICS_ENABLED=false
ANALYTICS_ENDPOINT=

# Security Settings
CORS_ORIGIN=*
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000